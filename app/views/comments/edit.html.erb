<div class="row">
  <div class="col-md-12">
    <h3>Edit Comment</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= render "layouts/errors", :object => @comment %>

    <%= form_for [@user, @post, @comment], :html => { :multipart => true} do |f| %>
      <ul class="formList list-unstyled">

        <li>
          <%= f.label :body %><br>
          <%= f.text_area :body, :cols => "60", :rows => "10" %>
        </li>

        <li class="submit">
          <%= f.submit "Submit", :class => "btn btn-sm btn-success" %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
