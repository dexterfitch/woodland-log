<!DOCTYPE html>
<html>
<head>
  <title>Woodland Log</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><%= link_to "Woodland Log", users_path %></h1>
      </div>
      <div class="col-md-6 text-right">
        <p>
          <i class="fa fa-pagelines"></i>
          <% if current_user %>
            <%= link_to "My Profile", user_path(current_user) %>
            <i class="fa fa-tree"></i>
            <%= link_to session_path(current_user), :data => { :method => :delete } do %>Logout<% end %>
          <% else %>
            <%= link_to new_user_path do %>Register<% end %>
            <i class="fa fa-tree"></i>
            <%= link_to new_session_path do %>Login<% end %>
          <% end %>
        <i class="fa fa-leaf"></i></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <hr>
        <%= yield %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <%= flash[:alert] %>
        <%= flash[:notice] %>
      </div>
    </div>
  </div>

</body>
</html>
